{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "buildCommand": "echo 'Using Dockerfile builder'"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "PORT=8000 gunicorn enhanced:app --log-file=- --log-level=info --bind=0.0.0.0:8000 --timeout 120 --workers=2 --threads=2",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "aptPackages": [
      "libgl1-mesa-glx", 
      "libglib2.0-0", 
      "libsm6", 
      "libxrender1", 
      "libxext6",
      "libxcb-shm0",
      "libxcb-xfixes0",
      "ffmpeg",
      "libavcodec-extra",
      "libjpeg-dev",
      "libpng-dev",
      "libtiff-dev",
      "libv4l-dev"
    ]
  }
} 