{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn enhanced:app --bind=0.0.0.0:$PORT --timeout 120",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "aptPackages": [
      "libgl1-mesa-glx", 
      "libglib2.0-0", 
      "libsm6", 
      "libxrender1", 
      "libxext6",
      "libxcb-shm0",
      "libxcb-xfixes0",
      "ffmpeg",
      "libavcodec-extra"
    ]
  }
} 